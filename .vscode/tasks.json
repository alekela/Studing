{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++ build file",
            "command": "E:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },

        {
            "label": "g++ build makefiles",
            "type": "shell",
            "command": "make",
            "problemMatcher": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build"
        },
    ],
    "version": "2.0.0"
}